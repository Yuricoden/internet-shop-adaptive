mixin filter(selectName,classSel,groundFilter,...items)
	.filter__selecter
		.selecter__wrapper
			p.select_name= selectName.selecterName
			if(selectName.selecterName == 'Price Range')
				div.ranges
			else
				select(class= classSel.nameSel)
					each item in items
						option(value=item.optVal,
						disabled=item.boolean,
						hidden=item.boolean,
						selected=item.boolean)=(item.textVal)


