include ../menu/menu

mixin header()
	+b.header&attributes(attributes)
		+e.content-up
			.content__wrapper-left
				.logo
					a(href="index.html") Dress ecommerce
				.logo__hide
					a(href='#')
								| DE
				+e.dropdown-wrapper
					select.dropdown
						option(value='en') EN
						option(value='uk') UK
						option(value='ru') RU
			.content__wrapper-right
				.links_vision
					.sign-up
						a(href='#') Email sign-up
					.market-bag
						a(href='#') Bag
						div.sum_price <span>$</span> <span>(2)</span>
		input(type='checkbox')#nav-toggle
		label(for='nav-toggle').nav-toggle
			#cross
				span.cros
				span.cros
			#hamburger
				span.hamb
				span.hamb
				span.hamb
		nav.nav__adaptive
			+e.content-end


				+menu(
                {refs:'#', name:'Women'},
                {refs: '#', name: 'Men'},
                {refs: '#', name: 'Handbags'},
                {refs:'#', name: 'Accessories'},
                {refs:'#', name: 'Sale'},
                {refs: '#', name: 'New Arrivals'},
                {refs: '#', name: 'Clearance'},
                {refs:'contact.html', name: 'Store Location'}
				)
				+b.product__search
					form.product__search-wrapper
						input(type='search' placeholder='Search Style').search_holder
					.icon__search







