*
	transition: .25s ease-in-out
	box-sizing: border-box
@media screen and (max-width: 760px)
	.nav-toggle span
		display block
		background #566973
		border-radius 2px
	.nav-toggle
		display none
		width: 100px
		z-index 2
		height: 100px
		position: relative
		cursor: pointer
		border-radius: 5px
		#hamburger
			position: absolute
			height: 100%
			width: 100%
			.hamb
				width: 30px
				height: 3px
				position: relative
				top: 24px
				left: 20px
				margin: 10px 0
				&:nth-child(1)
					transition-delay: .5s
				&:nth-child(2)
					transition-delay: .625s
				&:nth-child(3)
					transition-delay: .75s
		#cross
			position: absolute
			height: 100%
			width: 100%
			transform: rotate(45deg)
			.cros
				&:nth-child(1)
					height: 0%
					width: 4px
					position: absolute
					top: 32%
					left: 27px
				&:nth-child(2)
					width: 0px
					height: 4px
					position: absolute
					left: 11%
					top: 48px
					transition-delay: .25s
.nav-toggle.open
	#hamburger
		.hamb
			width: 0%
			&:nth-child(1)
				transition-delay: 0s
			&:nth-child(2)
				transition-delay: .125s
			&:nth-child(3)
				transition-delay: .25s
	#cross
		.cros
			&:nth-child(1)
				height: 34%
				background-color: #f14a58
		.cros
			&:nth-child(2)
				width: 34%
				background-color: #f14a58
			

@media screen and (max-width: 760px)
