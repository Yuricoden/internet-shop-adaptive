.footer__wrapper
	max-width 1300px
	margin 0 auto
.footer
	&:before
		border: 1px solid #e5e5e5;
		content: '';
		width: 100%;
		position: relative;
		top: 5px;
		display: inline-block
.footer__up
	display flex

.side-left
	padding-top 50px
	padding-left: 50px
	padding-right: 50px
	width: 100%;
	padding-bottom: 100px;
	display flex
	justify-content: space-around;
.left__side-wrapper
	display flex
	flex: 1 1
	justify-content space-around
	&:after
		display: inline-block
		content ''
		border: 1px solid #e5e5e5
		
.right__side-wrapper
	display flex
	flex 1 1
	padding-top 50px
	padding-bottom: 100px;
	padding-left: 45px;
	flex-direction: column
.contacts_side
	display flex
	
.questions
	flex: 1 1
	& h3
		font-set('FuturaPT-Demi',1rem,#000,700)
	
.phone
	flex: 1 1
	& p:first-child
		font-set('FuturaPT-Demi',1rem,#000,700)
.phone__number,
.questions__tweet
	margin-top 20px
.description__delivery
	margin-top 70px
.description__delivery
	p
		width 45%
		font-set('AGaramondPro-Italic',1rem,#000,400)
		
.social__links
	margin-top 4%

.about__wrapper
	&:last-child
		&:after
			width 0
.footer__bottom
	&:before
		border: 1px solid #e5e5e5;
		content: '';
		width: 100%;
		top -10px
		position: relative;
		display: inline-block;
.bottom__side-wrapper
	max-width 1300px
	margin 0 auto
	display flex
	padding 35px 0px
	justify-content: space-between;
.links__sitemap .links
	display flex
	
.links li a
	font-set("Helvetica Neue",1rem,#000,700)
	letter-spacing: 0.36px;
.links li a
	margin 15px
	
.share__wrapper
	flex-basis: 15%
	text-align: right

.share__wrapper > p
	letter-spacing: 0.54px;
	font-set('FuturaPT-Demi',1.2rem,#000,700)
	
.share__wrapper > p > span
	font-set('Helvetica Neue',1rem,#000,400)
.copyright__wrapper p
	font-set('Helvetica Neue',1rem,#000,700)
	
.share_number
	width 120px
	color #fff
	padding 10px
	border-radius 10px
	position relative
	background-color: #f4f4f4;
	
	&:after
		content ''
		position absolute
		border-color rgba(255, 0, 0, 0) #f4f9f9 rgba(255, 0, 0, 0) rgba(255, 0, 0, 0)
		border-style solid
		border-width 5px
		right: 53px;
		top: 14px;
.show
	visibility visible
	animation fadeIn 1s
	position relative
	
@keyframes fadeIn
	from
		opacity: 0
	 to
		opacity: 1

		
		