.footer__wrapper
	max-width 1300px
	margin 0 auto
.footer
	&:before
		border: 1px solid #e5e5e5;
		content: '';
		width: 100%;
		position: relative;
		top: 5px;
		display: inline-block
.footer__up
	display flex

.side-left
	padding-top 50px
	padding-left: 3%
	padding-right: 3%
	width: 100%;
	padding-bottom: 100px;
	display flex
	justify-content: space-around;
.left__side-wrapper
	display flex
	flex: 1 1
	justify-content space-around
	&:after
		display: inline-block
		content ''
		border: 1px solid #e5e5e5
		
.right__side-wrapper
	display flex
	flex 1 1
	padding-top 50px
	padding-bottom: 100px;
	padding-left: 45px;
	flex-direction: column
.contacts_side
	display flex
	
.questions
	flex: 1 1
	& h3
		font-set('FuturaPT-Demi',1rem,#000,700)
	
.phone
	flex: 1 1
	display flex
	flex-direction column
	align-items center
	& p:first-child
		font-set('FuturaPT-Demi',1rem,#000,700)
.phone__number,
.questions__tweet
	margin-top 20px
.description__delivery
	margin-top 5%
.description__delivery
	p
		width 45%
		font-set('AGaramondPro-Italic',1rem,#000,400)
		
.social__links
	margin-top 4%
	display flex
.about__wrapper
	&:last-child
		&:after
			width 0
.footer__bottom
	&:before
		border: 1px solid #e5e5e5;
		content: '';
		width: 100%;
		top -10px
		position: relative;
		display: inline-block;
.bottom__side-wrapper
	max-width 1300px
	margin 0 auto
	display flex
	padding 35px 0px
	justify-content: space-between;
.links__sitemap .links
	display flex
	
.links li a
	font-set("Helvetica Neue",1rem,#000,700)
	letter-spacing: 0.36px;
.links li a
	margin 15px
	
//.share__wrapper


.links__wrapper
	display flex
	flex 1.3 1
.links__sitemap
	flex 1 1
.copyright__wrapper
	flex 1 1
	display flex
	justify-content center
.share__wrapper
	flex 0.3 1

.share__wrapper > p
	letter-spacing: 0.54px;
	font-set('FuturaPT-Demi',1.2rem,#000,700)
	
.share__wrapper > p > span
	font-set('Helvetica Neue',1rem,#000,400)
.copyright__wrapper p
	font-set('Helvetica Neue',1rem,#000,700)
	
.share_number
	width 120px
	color #fff
	padding 10px
	border-radius 10px
	position relative
	background-color: #f4f4f4;
	
	&:after
		content ''
		position absolute
		border-color rgba(255, 0, 0, 0) #f4f9f9 rgba(255, 0, 0, 0) rgba(255, 0, 0, 0)
		border-style solid
		border-width 5px
		right: 53px;
		top: 14px;
.show
	visibility visible
	animation fadeIn 1s
	position relative
	
@keyframes fadeIn
	from
		opacity: 0
	 to
		opacity: 1
		
.facebook__link
	background url('../images/sprites/png_sprite.png')
	background-position 0 0px
	width 8px
	height 14px
	display block
.twitter__link
	background url('../images/sprites/png_sprite.png')
	background-position -33px -1px
	width 14px
	display block
	height 11px
.link_social
	margin 10px

@media screen and (max-width: 768px)
	.left__side-wrapper
		&:after
			display none
	.footer
		&:before
			display none
	.description__delivery p
		display none
	.contacts_side
		display flex
		flex-direction column
	.phone
		margin-top 7%
	.footer__left-links
		flex 1 1
	.footer__right-contacts
		flex 1 1
	.footer__up
		justify-content center
	.right__side-wrapper
		flex none
	.left__side-wrapper
		flex 0.9 1
	.contacts_side
		flex 0.9
		

@media screen and (max-width: 700px)
		.footer__up
			display flex
			flex-direction column
		.footer__left-links
			display flex
			flex-direction column
			align-items center
		.footer__right-contacts
			display flex
			flex-direction column
			align-items center
		.side-left
			padding-bottom 0
		.left__side-wrapper
			flex-direction column
			&:before
				display block
				content ''
				border 1px solid  #e5e5e5
			&:after
				display block
				content ''
				top 35px
				position relative
				border 1px solid  #e5e5e5
		.contacts_side
			display flex
			flex-direction row
		.phone
			margin-top 0
		.right__side-wrapper
			padding-left 0
			padding-bottom 0
		.questions,
		.phone
			display flex
			flex-direction column
			align-items center
		.social__links
			display none
		.questions__wrap
			display flex
			flex 0.85
			position relative
			&:after
				display: block
				content: ''
				border: 1px solid #e5e5e5
				height: 121px
		.description__delivery
			margin-top 0
		html,body
			margin 0
			overflow-x hidden
		//.contacts_side
		//	padding-top 5%
		//	padding-bottom 8%
		.links__wrapper
			order 1
			display flex
			align-items center
			padding-top: 2%
			padding-bottom: 3%
			justify-content space-around
		.bottom__side-wrapper
			display flex
			flex-direction column
			padding 0
		.links li a
			font-size 0.8rem
		.copyright__wrapper p
			font-size 0.8rem
		.links__sitemap
			height 50px
			display flex
			flex-direction column
			align-items center
			&:after
				content ''
				width 100%
				border 1px solid #e5e5e5
				margin-top: 5%
		.links__sitemap .links
			display flex
		.questions__wrap
					height 83.5px
					align-items center
		.phone
			height 100px
			align-items center
			justify-content center
		.questions__tweet
			font-size 0.75rem
		.copyright__wrapper
			flex none
		.catalog__items
			align-items: center
			flex-direction: column
		.button__goods
			width 240px
		.products__catalog
			padding-left 0
			padding-right 0
			
		
				
				
		