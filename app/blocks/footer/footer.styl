.footer__wrapper
	max-width 1300px
	margin 0 auto
.footer
	&:before
		border: 1px solid #e5e5e5;
		content: '';
		width: 100%;
		position: relative;
		top: 5px;
		display: inline-block
.footer__up
	display flex

.side-left
	padding-top 50px
	padding-left: 50px
	padding-right: 50px
	width: 100%;
	padding-bottom: 100px;
	display flex
	justify-content: space-around;
.left__side-wrapper
	display flex
	flex: 1 1
	justify-content space-around
	&:after
		display: inline-block
		content ''
		border: 1px solid #e5e5e5
		
.right__side-wrapper
	display flex
	flex 1 1
	padding-top 50px
	padding-bottom: 100px;
	padding-left: 45px;
	flex-direction: column
.contacts_side
	display flex
	
.questions
	flex: 1 1
	& h3
		font-set('FuturaPT-Demi',1rem,#000,700)
	
.phone
	flex: 1 1
	& p:first-child
		font-set('FuturaPT-Demi',1rem,#000,700)
.phone__number,
.questions__tweet
	margin-top 20px
.description__delivery
	margin-top 70px
.description__delivery
	p
		width 45%
		font-set('AGaramondPro-Italic',1rem,#000,400)
		
.social__links
	margin-top 4%

.about__wrapper
	&:last-child
		&:after
			width 0