.view__cart
	position absolute
	max-width 960px
	background-color: #ffffff;
	margin 0 auto
	top 225px
	left 0
	right 0
	opacity 1
	width: 100%;
	min-width: 320px;
	display none
	z-index 1
.cart__wrapper
	padding-left 30px
	padding-right 30px
.cart__name
	font-set('FuturaPT-Demi',2rem,black,400)
	line-height 65px
	flex 1
	letter-spacing 0.78px

.title__wrapper
	display flex
	
.title__wrapper::after
	content ''
	height 2px
	display block
	background-color #e5e5e5
	
.icon__close
	background-image: url("../images/sprites/png_sprite.png");
	background-position: 0 -22px
	width: 19px;
	height: 19px;
	cursor pointer
	align-self center
	
	
.img__goods img
	max-width 100%
	min-width 100%
.img__goods
	width: 145px;
	height: 205px;
	
.block__cart
	display flex
	
.goods
	display flex
	flex-wrap: wrap;
	justify-content: space-between
.goods__name h4
	font-set('Helvetica Neue',1rem,black,700)
	letter-spacing: 0.42px
.goods__options li
	font-set('Helvetica Neue',0.9rem,black,400)
	letter-spacing: 0.36px
.change__options a
	font-set('FuturaPT-Demi',1rem,#f14a58,400)
	letter-spacing: 0.42px;
.price__goods p
	font-set('Helvetica Neue',1rem,black,400)
.price__goods
	display: flex
	justify-content: center
	align-items: center
	margin-top: 1.2rem
	margin-bottom: 1.2rem
.block__cart
	flex auto
.left__block
	padding-left: 30px
	display flex
	flex-direction column
.goods__name
	flex 0 1
.goods__options
	flex 0.5 1
	align-items center
	display flex
.goods__options li
	margin-top: 10px
.hide
	transition opacity .5s, max-width .5s
	overflow: hidden
	opacity 0
	display none
.show
	transition opacity .5s, max-width .5s
	opacity 1
	display block
	
	
.message_rate
	display: flex
	justify-content: center
	padding: 20px
	box-shadow: inset 0 1px 0 #e5e5e5
	background-color: #f7f7f7
.message_rate p
	font-set('FuturaPT-Demi',1rem,#000,700)
	
.links__checkout a
	font-set('Helvetica Neue',1rem,black,700)
.links__checkout:last-child
	padding-left 5px
.button__buy a
	font-family: 'FuturaPT-Demi'
	font-size: 1.7rem
	color: #000
	font-weight: 600
	
.price_checkout div
	font-set('Helvetica Neue',1rem,black,400)
	display flex
	flex-direction column
.price_checkout span
	font-set('FuturaPT-Demi',1.2rem,#000,700)
	letter-spacing: 0.54px;
	
.checkout
	display: flex
	justify-content: space-between
	align-items: center
	margin-top 20px
	margin-bottom 40px
.button__buy
	padding 23px 110px
	display flex
	border: 1px solid #e5e5e5
